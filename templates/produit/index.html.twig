{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

<h1>Ajouter un produit </h1>

{{ form (form_ajout)}}

<h1>Liste des produits</h1>

{% if produits is not empty %}


   <table class="table">
    <thread>
        <tr>
            <th>Photo</th>
            <th>Nom</th>
            <th>Quantit√©</th>
            <th>Prix</th>
        </tr>
    </thread>
    <tbody>
        {% for produit in produits %}
        <tr>
        <td>
        {% if produit.photo is not null  %}
        <img src="{{asset('/uploads/'~produit.photo)}}">
        {% endif %}
        </td>
        <td>
            <a href="{{ path('fiche_produit',{'id':produit.id}) }}">{{produit.nom}}</a>
        </td>
            <th>{{produit.qte}}</th>
            <th>{{produit.prix}}</th>

        </tr>
    {% endfor %}


{% else %}

    <p>Il n'y a aucun produit</p>

{% endif %}

{% endblock %}
