{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<h1>Contenu du panier</h1>

{% if paniers is not empty %}


   <table class="table">
    <thread>
        <tr>
            <th>Produit</th>
            <th>Quantit√©</th>
            <th>Prix</th>
        </tr>
    </thread>
    <tbody>
        {% for panier in paniers %}
        <tr>
        </td>
            <th>{{panier.produit.nom}}</th>

